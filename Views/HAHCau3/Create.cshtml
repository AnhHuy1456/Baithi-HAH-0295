@model Baithi_HAH.Models.HAHCau3

@{
    ViewData["Title"] = "Create";
}

<h1>Thêm mới sinh viên</h1>

@* <h4>HAHCau3</h4> *@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Masinhvien" class="control-label"></label>
                <input asp-for="Masinhvien" class="form-control" />
                <span asp-validation-for="Masinhvien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hoten" class="control-label"></label>
                <input asp-for="Hoten" class="form-control" />
                <span asp-validation-for="Hoten" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Namsinh" class="control-label"></label>
                <input asp-for="Namsinh" class="form-control" />
                <span asp-validation-for="Namsinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở về bảng sinh viên</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
